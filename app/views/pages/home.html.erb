<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "background.jpg" %>);">
  <div class="container">
    <div>
      <h1>Book a coach to help you learn to code!</h1>
      <p>Change your life and learn to code at one of our campuses around the world.</p>
    </div>
    <%= link_to "Look for your coach", lessons_path, class:"btn btn-warning btn-lg" %>
  </div>
  <div class="cards-language">
    <%= link_to lessons_path(code_language: "ruby") do %><%= image_tag "ruby.png", class: "card-language" %><% end %>
    <%= link_to lessons_path(code_language: "javascript") do %><%= image_tag "javascript.png", class: "card-language" %><% end %>
    <%= link_to lessons_path(code_language: "python") do %><%= image_tag "python.png", class: "card-language" %><% end %>
    <%= link_to lessons_path(code_language: "css") do %><%= image_tag "css.png", class: "card-language" %><% end %>
    <%= link_to lessons_path(code_language: "html") do %><%= image_tag "html.png", class: "card-language" %><% end %>
    <%= link_to lessons_path(code_language: "sql") do %><%= image_tag "sql.png", class: "card-language" %><% end %>
  </div>
</div>
