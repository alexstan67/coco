<div class="container-bookings">
  <div>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", width: 56, height: 56, class: "avatar-large" %>
    <h1>  <%= current_user.first_name %> </h1>
  </div>

  <div class="d-flex justify-content-between">
    <div class="bookings-card flex-grow-1">
      <% @bookings.each do |booking| %>
        <div class="box-container">
          <div class="d-flex">
            <div class="box-left">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", width: 56, height: 56, class: "avatar-large" %>
            </div>
            <div class="box-center">
              <h2><p><%= booking.user.first_name %></p></h2>
              <p><%= booking.lesson.coding_language %></p>
            </div>
          </div>

          <div class="box-right">
            <p><%= booking.teaching_date %></p>
            <input class="w3-button w3-black" type="button" value="Accept"> <button class="w3-button w3-black">Reject</button>
          </div>
        </div>
      <% end %>
    </div>

    <div class="student-info" style="width: 300px;"></div>
  </div>
 </div>
