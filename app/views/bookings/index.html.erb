<div class="container">
<div class="container-bookings">
  <div>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", width: 56, height: 56, class: "avatar-large" %>
    <h1> Teacher:  <%= current_user.first_name %> </h1>
  </div>

  <div class="d-flex justify-content-between">
    <div class="bookings-card flex-grow-1">
      <% @bookings.each do |booking| %>
        <div class="box-container">
          <div class="d-flex">
            <div class="box-left">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", width: 56, height: 56, class: "avatar-large" %>
            </div>
            <div class="box-center">
              <p>Student: <%= booking.user.first_name %></p>
              <p><%= booking.lesson.coding_language %></p>
            </div>
          </div>

          <div class="box-right">
            <p><%= booking.teaching_date %></p>
            <% if booking.status == "pending" %>
              <%= link_to "Accept", booking_accept_path(booking)  %>
              <%= link_to "Reject", booking_reject_path(booking)  %>
              <% elsif booking.status == "accepted" %>
              <p>Accepted</p>
              <% else %>
              <p>Rejected</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="student-info" style="width: 300px;">
      <h2>Student Info</h2>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit.
    </div>

  </div>
 </div>
</div>

<%= console %>
